{
  "version": 2,
  "name": "namae",
  "alias": "namae.dev",
  "builds": [
    {
      "src": "/web/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "/api/services/*.ts",
      "use": "@now/node@canary"
    }
  ],
  "routes": [
    {
      "src": "/availability/(?<provider>[^/]+)/(?<query>[^/]+)",
      "dest": "/api/services/$provider.ts?query=$query"
    },
    {
      "src": "/(.*)",
      "dest": "/web/$1"
    }
  ],
  "env": {
    "NTA_APPLICATION_ID": "@namae-nta-application-id"
  }
}
